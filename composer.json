{
  "name": "tawba/vanilla-php",
  "description": "Simple Vanilla PHP Project",
  "keywords": [
    "vanilla",
    "php",
    "quick start"
  ],
  "license": "MIT",
  "type": "project",
  "require": {
    "vlucas/phpdotenv": "^2.5"
  },
  "require-dev": {
    "phpunit/phpunit": "^7.5"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/app",
      "Core\\": "core/"
    },
    "files": [
      "core/helpers.php"
    ]
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "post-install-cmd": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ]
  }
}
